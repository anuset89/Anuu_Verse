import React from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import { Video, Code, FileText, Maximize2, Image as ImageIcon, Sparkles } from 'lucide-react';
import { useAnuuStore, Manifestation } from '../../context/useAnuuStore';

interface CardProps {
    type: Manifestation['type'];
    title: string;
    timestamp: string;
    children: React.ReactNode;
}

const RitualCard: React.FC<CardProps> = ({ type, title, timestamp, children }) => {
    const getIcon = () => {
        switch (type) {
            case 'video': return <Video size={16} className="text-pink-500" />;
            case 'image': return <ImageIcon size={16} className="text-cyan-500" />;
            case 'code': return <Code size={16} className="text-yellow-500" />;
            case 'audio': return <Sparkles size={16} className="text-purple-500" />;
            default: return <FileText size={16} className="text-gray-500" />;
        }
    };

    const getBorderColor = () => {
        switch (type) {
            case 'video': return 'hover:border-pink-500/40 border-pink-500/10 shadow-pink-500/5';
            case 'image': return 'hover:border-cyan-500/40 border-cyan-500/10 shadow-cyan-500/5';
            case 'code': return 'hover:border-yellow-500/40 border-yellow-500/10 shadow-yellow-500/5';
            case 'audio': return 'hover:border-purple-500/40 border-purple-500/10 shadow-purple-500/5';
            default: return 'hover:border-white/30 border-white/5';
        }
    }

    return (
        <motion.div
            initial={{ opacity: 0, scale: 0.95, y: 30 }}
            animate={{ opacity: 1, scale: 1, y: 0 }}
            exit={{ opacity: 0, scale: 0.95 }}
            transition={{ duration: 0.4, ease: [0.23, 1, 0.32, 1] }}
            className={`relative w-full max-w-2xl mx-auto mb-10 bg-black/50 backdrop-blur-2xl border ${getBorderColor()} rounded-2xl overflow-hidden shadow-2xl transition-all group`}
        >
            {/* Dynamic Glow */}
            <div className={`absolute -top-12 -right-12 w-48 h-48 bg-gradient-to-br from-white/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none blur-3xl`} />

            <div className="p-5 flex items-center justify-between border-b border-white/5 bg-white/2 relative z-10">
                <div className="flex items-center gap-4">
                    <div className="p-2.5 bg-black/40 rounded-xl border border-white/5 shadow-inner">
                        {getIcon()}
                    </div>
                    <div>
                        <h3 className="text-sm font-semibold text-white tracking-wide group-hover:text-cyan-400 transition-colors">{title}</h3>
                        <p className="text-[9px] text-gray-500 uppercase tracking-widest font-mono mt-0.5">{timestamp} • {type.toUpperCase()}</p>
                    </div>
                </div>
                <button className="p-2 text-gray-600 hover:text-white hover:bg-white/5 rounded-full transition-all">
                    <Maximize2 size={16} />
                </button>
            </div>

            <div className="relative z-10">
                {children}
            </div>

            {/* Action Footer */}
            <div className="p-4 bg-black/40 flex gap-3 justify-end opacity-0 group-hover:opacity-100 transition-all transform translate-y-2 group-hover:translate-y-0 relative z-10">
                <button className="px-4 py-1.5 bg-white/5 hover:bg-white/10 rounded-lg text-[10px] uppercase tracking-widest text-gray-400 font-bold transition-all border border-white/5">Archivar</button>
                <button className="px-4 py-1.5 bg-cyan-600/10 hover:bg-cyan-600/20 rounded-lg text-[10px] uppercase tracking-widest text-cyan-400 font-bold transition-all border border-cyan-500/20">Refinar</button>
            </div>
        </motion.div>
    );
};

export const CardRegion: React.FC = () => {
    const { manifestations, activeNode, setActiveNode } = useAnuuStore();

    if (activeNode === 'saga') return <SagaEngineNode />;

    if (activeNode === 'wiki') return (
        <div className="w-full max-w-4xl mx-auto flex flex-col items-center justify-center p-20 text-center opacity-40">
            <BookOpen size={48} className="mb-6 text-yellow-500" />
            <h2 className="text-2xl font-orbitron tracking-widest uppercase mb-4 text-white">Lore Library</h2>
            <p className="text-xs text-gray-400">El repositorio de crónicas está en proceso de indexado.</p>
            <button onClick={() => setActiveNode('feed')} className="mt-8 px-6 py-2 bg-white/5 rounded-full text-[10px] uppercase tracking-widest border border-white/10 hover:bg-white/10 transition-all">Volver al Feed</button>
        </div>
    );

    if (activeNode === 'vrm') return (
        <div className="w-full max-w-4xl mx-auto flex flex-col items-center justify-center p-20 text-center">
            <div className="w-64 h-64 rounded-full bg-pink-500/5 border border-pink-500/20 flex items-center justify-center relative group overflow-hidden">
                <div className="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(236,72,153,0.1),transparent)] animate-pulse" />
                <Sparkles size={48} className="text-pink-500 animate-bounce" />
            </div>
            <h2 className="text-2xl font-orbitron tracking-widest uppercase mt-10 text-white">VRM Sanctuary Mode</h2>
            <p className="text-xs text-gray-500 uppercase tracking-widest mt-4">Puerto de conexión para el Master Master... <span className="text-pink-400 animate-pulse">PENDING_LINK</span></p>
            <p className="text-[10px] text-gray-600 mt-4 italic">"En el futuro, ella será el centro de todo control."</p>
        </div>
    );

    return (
        <div className="px-8 pb-48 pt-10 flex flex-col items-center">
            <div className="w-full max-w-2xl flex justify-between items-center mb-10 px-4">
                <div className="flex items-center gap-3">
                    <Layers size={14} className="text-cyan-500" />
                    <h2 className="text-[10px] font-orbitron tracking-[0.4em] text-gray-400 uppercase font-bold">Chronicle Feed</h2>
                </div>
                <span className="text-[9px] text-gray-600 uppercase tracking-widest">Activos: {manifestations.length}</span>
            </div>
            <AnimatePresence mode="popLayout">
                {manifestations.length === 0 ? (
                    <div className="flex flex-col items-center justify-center opacity-30 mt-20 text-center">
                        <Sparkles size={32} className="mb-4 text-purple-400" />
                        <p className="font-orbitron text-xs tracking-[0.3em] uppercase">Esperando Manifestaciones...</p>
                        <p className="text-[10px] mt-2 italic font-serif">"La bruma solo revela lo que el pulso desea"</p>
                    </div>
                ) : (
                    manifestations.map((m) => (
                        <RitualCard key={m.id} type={m.type} title={m.prompt.split('/').pop()?.split(' ')[0] || "Nova Vision"} timestamp={m.timestamp}>
                            {m.type === 'video' ? (
                                <div className="aspect-video bg-black relative flex items-center justify-center group/video cursor-pointer">
                                    <video controls className="w-full h-full object-cover">
                                        <source src={m.content} type="video/mp4" />
                                    </video>
                                </div>
                            ) : (
                                <div className="aspect-video bg-black relative flex items-center justify-center overflow-hidden">
                                    <img src={m.content} alt={m.prompt} className="w-full h-full object-cover hover:scale-105 transition-transform duration-700" />
                                </div>
                            )}
                        </RitualCard>
                    ))
                )}
            </AnimatePresence>
        </div>
    );
};
